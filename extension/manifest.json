{
    "name": "Interlope",
    "version": "1.0",
    "description": "Control media with input from beyond chrome",
    "manifest_version": 2,
    "background": {
        "scripts": [
          "context_menu.js",
          "player_controller.js",
          "tab_controller.js"
        ],
        "persistent": false
      },
      "permissions": [
        "contextMenus",
        "tabs",
        "activeTab",
        "https://*/"
      ],
      "icons": {
        "16": "icons/16_play.png",
        "48": "icons/48_play.png",
        "128": "icons/128_play.png"
      }
  }